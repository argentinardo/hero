{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/scripts/**/*.ts",
    "declarations.d.ts"
  ]
}
