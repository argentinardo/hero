{
  "appId": "com.hero.game",
  "appName": "NEW H.E.R.O.",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "allowNavigation": ["https://localhost", "https://newhero.netlify.app", "*.netlify.app", "*.netlify.live"]
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true,
    "useWebView": true,
    "allowMixedContentOverride": true,
    "webViewDebuggingEnabled": true,
    "iFrameSupport": true
  },
  "plugins": {
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#000000",
      "overlaysWebView": true
    },
    "App": {
      "launchUrl": "hero://",
      "deepLinkScheme": "hero"
    }
  }
}
